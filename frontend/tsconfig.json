{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "react", "react-dom", "next"],
    "esModuleInterop": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
